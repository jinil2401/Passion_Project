@model PassionProjectSummer2024.Models.ArticleDto

@{
    ViewBag.Title = "Delete Article";
}

<h2>Delete Article</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Content</dt>
        <dd>@Html.DisplayFor(model => model.Content)</dd>

        <dt>Published Date</dt>
        <dd>@Html.DisplayFor(model => model.PublishedDate)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Article", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Delete" class="btn btn-danger" /> 
@Html.ActionLink("Back to List", "List");
}
</div>
